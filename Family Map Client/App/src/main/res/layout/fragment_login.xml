<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android = "http://schemas.android.com/apk/res/android"
        xmlns:tools = "http://schemas.android.com/tools"
        android:layout_width = "match_parent"
        android:layout_height = "match_parent"
        android:id = "@+id/fragment_login"
        android:background="@color/CustomCream"
        tools:context = ".Controllers.LoginController">

    <LinearLayout
            android:orientation = "vertical"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:padding="5dp">


        <LinearLayout
                android:layout_height = "wrap_content"
                android:layout_width = "match_parent"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <TextView
                    android:layout_width = "0dp"
                    android:layout_height = "30dp"
                    android:layout_weight = "1"
                    android:text = "@string/prompt_serverHost"
                    android:inputType = "text" />

            <EditText
                    android:id = "@+id/ipInput"
                    android:layout_width = "255dp"
                    android:layout_height = "wrap_content"
                    android:ems = "10"
                    android:inputType = "text"
                    android:hint = "@string/hint_serverHost" />
        </LinearLayout>

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <TextView
                    android:layout_width = "0dp"
                    android:layout_height = "wrap_content"
                    android:layout_weight = "1"
                    android:text = "@string/prompt_serverPort" />

            <EditText
                    android:id = "@+id/portInput"
                    android:layout_width = "255dp"
                    android:layout_height = "wrap_content"
                    android:ems = "10"
                    android:inputType = "text"
                    android:hint = "@string/hint_serverPort" />
        </LinearLayout>

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <TextView
                    android:layout_width = "0dp"
                    android:layout_height = "30dp"
                    android:layout_weight = "1"
                    android:text = "@string/prompt_username" />

            <EditText
                    android:id = "@+id/usernameInput"
                    android:layout_width = "255dp"
                    android:layout_height = "wrap_content"
                    android:ems = "10"
                    android:inputType = "textPersonName"
                    android:hint = "@string/hint_username" />
        </LinearLayout>

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <TextView
                    android:layout_width = "0dp"
                    android:layout_height = "30dp"
                    android:layout_weight = "1"
                    android:text = "@string/prompt_password" />

            <EditText
                    android:id = "@+id/passwordInput"
                    android:layout_width = "255dp"
                    android:layout_height = "wrap_content"
                    android:ems = "10"
                    android:inputType = "textPassword"
                    android:hint = "@string/hint_password" />
        </LinearLayout>

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <TextView
                    android:layout_width = "0dp"
                    android:layout_height = "30dp"
                    android:layout_weight = "1"
                    android:text = "@string/prompt_firstName" />

            <EditText
                    android:id = "@+id/firstNameInput"
                    android:layout_width = "255dp"
                    android:layout_height = "wrap_content"
                    android:ems = "10"
                    android:inputType = "text"
                    android:hint = "@string/hint_firstName" />
        </LinearLayout>

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <TextView
                    android:layout_width = "0dp"
                    android:layout_height = "30dp"
                    android:layout_weight = "1"
                    android:text = "@string/prompt_lastName" />

            <EditText
                    android:id = "@+id/lastNameInput"
                    android:layout_width = "255dp"
                    android:layout_height = "wrap_content"
                    android:ems = "10"
                    android:inputType = "text"
                    android:hint = "@string/hint_lastName" />
        </LinearLayout>

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <TextView
                    android:id = "@+id/textView"
                    android:layout_width = "0dp"
                    android:layout_height = "30dp"
                    android:layout_weight = "1"
                    android:text = "@string/prompt_email" />

            <EditText
                    android:id = "@+id/emailInput"
                    android:layout_width = "255dp"
                    android:layout_height = "wrap_content"
                    android:ems = "10"
                    android:inputType = "text"
                    android:hint = "@string/hint_email" />
        </LinearLayout>

        <RadioGroup
                android:layout_width = "181dp"
                android:layout_height = "60dp"
                android:orientation = "horizontal">

            <RadioButton
                    android:id = "@+id/maleButton"
                    android:text = "@string/title_male"
                    android:layout_width = "90dp"
                    android:layout_height = "50dp" />

            <RadioButton
                    android:id = "@+id/femaleButton"
                    android:text = "@string/title_female"
                    android:layout_width = "90dp"
                    android:layout_height = "50dp" />

        </RadioGroup>

        <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "50dp"
                android:gravity = "center_horizontal"
                android:orientation = "horizontal">

            <Button
                    android:id = "@+id/loginButton"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text = "@string/action_login" />

            <Button
                    android:layout_width = "50dp"
                    android:layout_height = "0dp"
                    android:clickable = "false"
                    android:visibility = "invisible" />

            <Button
                    android:id = "@+id/registerButton"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:text = "@string/action_register" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>